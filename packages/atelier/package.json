{
  "name": "@varunkanwar/atelier",
  "version": "0.1.1",
  "description": "A task runtime for browser workloads with parallelism, backpressure, and cancellation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepublishOnly": "bun run check && bun run typecheck && bun run test && bun run build"
  },
  "keywords": [
    "worker",
    "web-worker",
    "task",
    "parallelism",
    "concurrency",
    "backpressure",
    "cancellation",
    "queue",
    "comlink",
    "browser",
    "async",
    "pool"
  ],
  "author": "Varun Kanwar <varunkanwar1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VarunKanwar/atelier.git"
  },
  "homepage": "https://github.com/VarunKanwar/atelier#readme",
  "bugs": {
    "url": "https://github.com/VarunKanwar/atelier/issues"
  },
  "dependencies": {
    "comlink": "^4.4.2",
    "transferables": "^1.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  }
}
