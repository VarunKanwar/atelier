{
  "name": "atelier-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "bun run --workspaces --if-present --silent lint",
    "lint:fix": "bun run --workspaces --if-present --silent lint:fix",
    "format": "bun run --workspaces --if-present --silent format",
    "format:fix": "bun run --workspaces --if-present --silent format:fix",
    "check": "bun run --workspaces --if-present --silent check",
    "check:fix": "bun run --workspaces --if-present --silent check:fix",
    "typecheck": "bun run --workspaces --if-present --silent typecheck",
    "test": "bun run --workspaces --if-present --silent test",
    "build": "bun run --workspaces --if-present --silent build",
    "site:dev": "bun run --cwd apps/site dev",
    "site:build": "bun run --cwd apps/site build",
    "site:preview": "bun run --cwd apps/site preview"
  }
}
